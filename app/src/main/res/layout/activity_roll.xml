<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#329393"
    tools:context=".RollActivity">

    <TextView
        android:id="@+id/txtResultRoll"
        android:layout_width="230dp"
        android:layout_height="120dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/saoui"
        android:shadowColor="#9ad6ff"

        android:shadowRadius="0"
        android:text="Press on dice:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#9ad6ff"
        android:textSize="36sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnD20"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/d20"
        app:layout_constraintEnd_toStartOf="@+id/btnD10"
        app:layout_constraintTop_toTopOf="@+id/btnD10"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnD10"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="171dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="171dp"
        android:background="@drawable/d10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResultRoll"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnD6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/d6"
        app:layout_constraintStart_toEndOf="@+id/btnD10"
        app:layout_constraintTop_toTopOf="@+id/btnD10"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnD12"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/d12"
        app:layout_constraintEnd_toStartOf="@+id/btnD8"
        app:layout_constraintTop_toTopOf="@+id/btnD8"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnD8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:alpha="1"
        android:background="@drawable/d8"
        app:layout_constraintEnd_toEndOf="@+id/btnD10"
        app:layout_constraintTop_toBottomOf="@+id/btnD10"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnD4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/d4"
        app:layout_constraintStart_toEndOf="@+id/btnD8"
        app:layout_constraintTop_toTopOf="@+id/btnD8"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnD100"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/d100"
        app:layout_constraintEnd_toEndOf="@+id/btnD8"
        app:layout_constraintTop_toBottomOf="@+id/btnD8"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>